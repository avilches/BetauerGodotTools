<Project Sdk="Godot.NET.Sdk/3.3.0">
    <PropertyGroup>
        <TargetFramework>net472</TargetFramework>
        <EnableDefaultCompileItems>False</EnableDefaultCompileItems>
        <LangVersion>8.0</LangVersion>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    <ItemGroup>
        <Compile Include="Game/**" />
        <Compile Include="AppVersion.cs" />
        <Compile Include="export\Release.cs" />
    </ItemGroup>
    <ItemGroup Condition=" '$(Configuration)' == 'Debug'">
        <PackageReference Include="NUnit" Version="3.13.3" />
        <Compile Include="Tests/**" />
        <Reference Include="Betauer.TestRunner">
            <HintPath>..\export\Betauer.TestRunner.dll</HintPath>
        </Reference>
    </ItemGroup>
    <ItemGroup>
        <Content Include="*" Exclude="mono_crash*" />
        <!-- From anima -->
        <Content Include="addons/**" />
        <Content Include="demos/**" />
        <Content Include="resources/**" />

        <Content Include="Assets/**" />
        <Content Include="Characters/**" />
        <Content Include="Docs/*" />
        <Content Include="Scenes/**" />
        <Content Include="Worlds/**" />
    </ItemGroup>
    <ItemGroup>
      <Reference Include="Betauer.Animation">
        <HintPath>..\export\Betauer.Animation.dll</HintPath>
      </Reference>
      <Reference Include="Betauer.Core">
        <HintPath>..\export\Betauer.Core.dll</HintPath>
      </Reference>
      <Reference Include="Betauer.DI">
        <HintPath>..\export\Betauer.DI.dll</HintPath>
      </Reference>
      <Reference Include="Betauer.GameTools">
        <HintPath>..\export\Betauer.GameTools.dll</HintPath>
      </Reference>
      <Reference Include="Betauer.StateMachine">
        <HintPath>..\export\Betauer.StateMachine.dll</HintPath>
      </Reference>
    </ItemGroup>
</Project>